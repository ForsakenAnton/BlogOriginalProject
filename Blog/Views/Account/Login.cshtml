@model Blog.Models.ViewModels.AccountViewModels.LoginVM

<h1 class="display-4">Login</h1>
<hr class="bg-success mb-3" style="height:5px;" />

<p class="fs-3 mb-5 border border-0 border-bottom pb-2">
    Are you not registered?
    <a asp-action="Registration"
       class="text-decoration-none fw-bolder">
        Registration
    </a>
</p>

<form method="post"
      asp-action="Login"
      asp-controller="Account"
      asp-route-returnUrl="@Model.ReturnUrl">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating mb-3">
        <input asp-for="Email" 
               class="form-control"
               placeholder="@nameof(Model.Email)">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-4">
        <input asp-for="Password" 
               class="form-control" 
               placeholder="@nameof(Model.Password)">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-4">
        <input asp-for="RememberMe" class="form-check-input">
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <input type="submit" 
               value="Login" 
               class="btn btn-lg btn-outline-success p-3 fw-bold border-4 w-100" />
    </div>
</form>