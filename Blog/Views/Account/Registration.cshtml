@model Blog.Models.ViewModels.AccountViewModels.RegisterVM

<h1 class="display-4">Registration</h1>
<hr class="bg-primary mb-3" style="height:5px;" />

<p class="fs-3 mb-5 border border-0 border-bottom pb-2">Are you allready registered? 
    <a asp-action="Login"
       class="link-success text-decoration-none fw-bolder">
       Log In
    </a>
</p>

<form method="post"
      asp-action="Registration"
      asp-controller="Account">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating mb-3">
        <input asp-for="Email" 
               class="form-control" 
               placeholder="@nameof(Model.Email)">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Password" 
               class="form-control" 
               placeholder="@nameof(Model.Password)">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="PasswordConfirm" 
               class="form-control" 
               placeholder="@nameof(Model.PasswordConfirm)">
        <label asp-for="PasswordConfirm"></label>
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <input type="submit"
               value="Registration" 
               class="btn btn-lg btn-outline-primary  p-3 fw-bold border-4 w-100" />
    </div>
</form>